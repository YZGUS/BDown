<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层颜色 -->
    <item>
        <color android:color="@color/background_light" />
    </item>
    
    <!-- 第一层渐变色背景：模拟尖叫的蓝色波浪 -->
    <item>
        <shape>
            <gradient
                android:startColor="#334A6DB3"
                android:endColor="#33E9ECF5"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 第二层渐变：斜向波浪图案 -->
    <item>
        <shape>
            <gradient
                android:startColor="#22526C9A"
                android:centerColor="#114A6DB3"
                android:endColor="#227798D1"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 边框效果：增加一点纹理感 -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#115D6D7E"
                android:dashWidth="10dp"
                android:dashGap="8dp" />
        </shape>
    </item>
</layer-list> 