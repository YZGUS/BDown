<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bilibili"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.bilibili.BilibiliFragment">

    <FrameLayout
        android:id="@+id/bilibili_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="-12dp"
        android:background="@drawable/semi_transparent_rounded_background"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/bilibili_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="登 录"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bilibili_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="搜 索"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bilibili_tv_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="视 频 列 表"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>