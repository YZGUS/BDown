<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.bilibili.BilibiliLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_corner_background"
        android:elevation="2dp"
        android:visibility="visible">

        <!-- 登录按钮 -->
        <Button
            android:id="@+id/blf_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登 录"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/blf_btn_scanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确 定"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/blf_image_qrcode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/semi_transparent_rounded_background"
            android:padding="16dp"
            android:src="@drawable/ic_no_login" />
    </LinearLayout>
</FrameLayout>